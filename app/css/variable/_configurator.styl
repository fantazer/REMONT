//.section-titile-sub
.section-sheme-cont
	flex(between)
//.main-cont
.section-sheme-step
	width 28%
.section-sheme-el
	margin-bottom 30px
.section-sheme-icon
	margin-bottom 10px
	padding 30px
	background yellow
	round()
	flex(mid) 
	.icon
		size 60px
	
//.icon
.section-sheme-title
	up()
	font-weight bold
	margin-bottom 10px
	span
		font-size 26px
//.section-sheme-text
.section-sheme-img
	width 600px
	flex(mid)
.section-sheme-step--left
	.section-sheme-el
		f()
		fl()
		align-items flex-end
	.section-sheme-text
		text-align right

.section-sheme-step--right
	.section-sheme-el
		f()
		fl()
		align-items flex-start
	.section-sheme-text
		text-align left

//.section
.section-form-filter
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background rgba(17, 17, 17, 0.49); 
.section-form
	position relative
	margin-top 40px
	margin-bottom -40px
	bg-full()
	.section-titile,
	.section-titile-sub
		color white
//.main-cont
.section-form-wrap
	padding 0 0 40px 0
	border-bottom 1px solid rgba(254, 254, 254, 0.38);
	margin-bottom 40px 
.section-form-item
	flex(between)
	input
		width 30%
		opacity .9
.section-form-get
	flex(mid)
.header-navigation__el--serch
	padding 20px 
	background yellow 
	flex(mid)
	cp()
	.icon
		fill black
		size 20px

.bread-crambs-wrap
	padding 40px 0
	margin-bottom 40px
	background whitesmoke 
.bread-crambs
	f()
.bread-crambs-el
	color black
	padding-right 30px
	position relative
	a
		color black
	&:after
		content '/'
		position absolute
		right 10px
		top 0
	&:last-child
		a
			color grey
		&:after
			content '/'
			display none
		
		
