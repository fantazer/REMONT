.header 
	background #324a5e
	color #324a5e
.header-top 
	//border-bottom 1px solid #2a3649
	background white 
.header-top-wraper
	flex(between)
	padding 20px 0
.header-logo 
	font-weight 600
	font-size 24px
	img
		width 300px
//.header-contact 
.header-contact-phone
	color #324a5e
	font-size 32px
	font-weight bold
	display block
.header-contact-mail
	font-size 16px
	text-align right
	display block
	color #324a5e
.header-navigation 
	flex(between)
.header-navigation__el 
	up()
	color white
	padding 20px 0
	text-align center
	font-size 13px
	tr(all)
	&:hover
		color yellow
.header-search
	position relative
	width 30%
	input
		padding-left 5px 
		border-bottom 1px solid #324a5e
		br(0)
		width 100% 
.header-search-icon
	position absolute
	right 5px
	top 50%
	margin-top -15px
	.icon
		size 20px
	
